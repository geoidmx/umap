# ============================================
# CONFIGURACIÓN DE PRODUCCIÓN - UMAP
# ============================================
# IMPORTANTE: Copia este archivo a .env.prod y actualiza los valores
# NUNCA uses estos valores por defecto en producción

# Base de datos (usa contraseñas seguras)
UMAP_DB_NAME=umap
UMAP_DB_USER=umap_user
UMAP_DB_PASSWORD=CAMBIA_ESTA_CONTRASENA_SEGURA
UMAP_DB_HOST=db
UMAP_DB_PORT=5432

# Seguridad (genera una clave secreta única)
# Puedes generar una con: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=GENERA_UNA_CLAVE_SECRETA_UNICA_AQUI

# IMPORTANTE: En producción DEBUG debe ser False
DEBUG=False

# Dominio de tu aplicación (sin https://)
ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com

# URLs con protocolo https
CSRF_TRUSTED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com
SITE_URL=https://tu-dominio.com